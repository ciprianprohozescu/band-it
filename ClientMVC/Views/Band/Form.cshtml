@model ClientMVC.Models.BandForm

<h1>@ViewBag.Title</h1>

<div class="row">
    <div class="col-sm-6">
        <form action="~/band/@Model.Action" method="post">
            <input type="hidden" name="id" value="@Model.Band.ID" />
            <input type="hidden" name="rowVersion" value="@Model.Band.RowVersion" id="rowversion" />

            <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" value="@Model.Band.Name" class="form-control" />
                <p class="help-block text-danger">@Model.Band.NameError</p>
            </div>

            <div class="form-group">
                <label>Description</label>
                <textarea name="description" class="form-control">@Model.Band.Description</textarea>
            </div>

            <div class="form-group">
                <label>Invite message</label>
                <textarea name="inviteMessage" class="form-control">@Model.Band.InviteMessage</textarea>
            </div>

            <p class="help-block text-danger">@Model.Band.RowVersionError</p>

            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
</div>
