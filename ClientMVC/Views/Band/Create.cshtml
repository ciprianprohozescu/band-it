@model ClientMVC.Models.BandForm

@{
    ViewBag.Title = "Register";
}

    <div class="row">
        <div class="mx-auto col-xl-9" style="padding:30px; background-color:rgba(255, 255, 255, 0.27); border-radius:20px">
            <div class=" mx-auto">
                <h1 class="mb-5" style="text-shadow:0px 0px 8px rgba(0, 0, 0, 0.55);">Create Your Own Band</h1>
            </div>
            <div class="col-md-8 col-lg-7 col-xl-6 mx-auto mb-md-0">

                @using (Html.BeginForm("Register", "Band", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.EditorFor(model => model.Name, new
                   {
                       htmlAttributes = new
                       {
                           @class = "form-control form-control-lg mb-2 mb-md-0",
                           @style = "box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.78);",
                           @placeholder = "Band Name"
                       }
                   })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Register" style="box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.78);" class="btn btn-block btn-lg btn-primary col-12 col-md-4 offset-md-4 " />
                    </div>
                }
            </div>
        </div>
    </div>
