@model List<string>

@if (Model.Count == 0)
{
    <p>No photos found.</p>
}
else
{
    <div id="carousel" class="carousel slide rounded" data-ride="carousel" style="background: rgba(0, 0, 0, 0.5)">
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            @for (var i = 1; i < Model.Count; ++i)
            {
                <li data-target="#carousel" data-slide-to="@i"></li>
            }
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Model[0]" class="d-block mx-auto" style="max-height: 70vh">
            </div>
            @for (var i = 1; i < Model.Count; ++i)
            {
                <div class="carousel-item">
                    <img src="@Model[i]" class="d-block mx-auto" style="max-height: 70vh">
                </div>
            }
        </div>

        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}