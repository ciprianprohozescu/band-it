<!-- Container for the image gallery -->
<div class="container">

    <!-- Full-width images with number text -->
    <div class="mySlides">
        <div class="numbertext">1 / 3</div>
        <img src="~/Content/Images/profile-placeholder.png" style="width:100%">
    </div>

    <div class="mySlides">
        <div class="numbertext">2 / 3</div>
        <img src="~/Content/Images/profile-placeholder.png" style="width:100%">
    </div>

    <div class="mySlides">
        <div class="numbertext">3 / 3</div>
        <img src="~/Content/Images/profile-placeholder.png" style="width:100%">
    </div>

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>

    <!-- Image text -->
    <div class="caption-container">
        <p id="caption"></p>
    </div>

    <!-- Thumbnail images -->
    <div class="row col-sm-12">
        <div class="column">
            <img class="demo cursor" src="~/Content/Images/profile-placeholder.png" style="width:100%" onclick="currentSlide(1)" alt="The Woods">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/Content/Images/profile-placeholder.png" style="width:100%" onclick="currentSlide(2)" alt="Cinque Terre">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/Content/Images/profile-placeholder.png" style="width:100%" onclick="currentSlide(3)" alt="Mountains and fjords">
        </div>
    </div>
</div>