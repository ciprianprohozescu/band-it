<Window x:Class="ClientDesktop.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientDesktop"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="146.84">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="181*"/>
        </Grid.RowDefinitions>
        <TextBox Name="Email" HorizontalAlignment="Left" Height="23" Margin="10,40.342,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <TextBox Name="Username" HorizontalAlignment="Left" Height="23" Margin="10,102.342,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <PasswordBox Name="Password" HorizontalAlignment="Left" Height="23" Margin="10,163.342,0,0" VerticalAlignment="Top" Width="120" Password="Password" Grid.Row="1"/>
        <Button Content="Register" HorizontalAlignment="Left" Margin="25,252.342,0,0" VerticalAlignment="Top" Width="75" Click="RegisterUser" Grid.Row="1"/>

    </Grid>
</Window>
