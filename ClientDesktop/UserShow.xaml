        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientDesktop"
        mc:Ignorable="d"
        Title="UserShow" Height="450" Width="800">
    <Grid>
        <ListView Name="listSkills" HorizontalAlignment="Left" Height="196" Margin="37,124,0,0" VerticalAlignment="Top" Width="283">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Skills" HorizontalAlignment="Left" Margin="37,93,0,0" VerticalAlignment="Top" Width="91"/>
        <TextBox Name="SearchText" HorizontalAlignment="Left" Height="23" Margin="37,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="180,53,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Insert User ID" HorizontalAlignment="Left" Margin="37,18,0,0" VerticalAlignment="Top" Width="91"/>

    </Grid>
</Window>
